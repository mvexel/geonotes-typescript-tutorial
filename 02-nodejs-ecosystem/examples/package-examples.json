{
  "name": "geonotes-api",
  "version": "1.0.0",
  "description": "Location-based notes API built with TypeScript",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/main.ts",
    "build": "tsc -p tsconfig.prod.json",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint && npm run type-check",
    "docker:build": "docker build -t geonotes-api .",
    "docker:run": "docker run -p 3000:3000 geonotes-api",
    "migration:generate": "prisma migrate dev",
    "migration:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "typescript",
    "node.js",
    "api",
    "geospatial",
    "postgresql",
    "postgis"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "prisma": "^5.2.0",
    "@prisma/client": "^5.2.0",
    "winston": "^3.10.0",
    "prom-client": "^14.2.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    "tsx": "^3.12.7",
    "nodemon": "^3.0.1",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "prettier": "^3.0.2",
    "jest": "^29.6.4",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/geonotes-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/geonotes-api/issues"
  },
  "homepage": "https://github.com/yourusername/geonotes-api#readme"
}